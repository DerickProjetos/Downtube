    <style>
      body{
        display: flex;
        flex-direction: column;
        background: rgb(31, 31, 31);
        font-family: sans-serif;
        box-sizing: border-box;
      }
      form{
        background: rgb(54, 54, 54);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        gap: 10vh;
      }
      form *{
        margin-top: 5%;
        width: 70%;
        padding: 1%;
        font-size: 110%;
        text-align: center;
      }
      form div{
        display: flex;
      }
      header{
        display: flex;
        color:whitesmoke;
        flex-direction: column;
        align-items: center;
      }
    </style>
  </head>
<body>
      <form action="/" method="post" >
        <input  type="text" name="url" placeholder="youtube link">
        <div>
          <select class="form-select" name="format">
            <option value="audioonly">MP3</option>
            <option value="videoandaudio">MP4</option>
          </select>
          <select class="form-select" name="quality">
            <option value="highest">high quality</option>
            <option value="lowest">low quality</option>
          </select>
        </div>
        <button type="submit">DOWNLOAD</button>
      </form>
